{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "groupName": "Node.js",
      "matchDepNames": "node",
      "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-.*)?$",
      "matchPackagePatterns": ["/node$"],
      "versioning": "node"
    }
  ]
}
