{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["npm", "nodenv", "circleci", "docker-compose"],
  "packageRules": [
    {
      "groupName": "Node.js",
      "matchDepNames": "node",
      "versionCompatibility": "^(?<version>[^-]+)(?<compatibility>-.*)?$",
      "matchPackageNames": [
        "node",
        "cimg/node",
      ],
      "versioning": "node"
    }
  ]
}
